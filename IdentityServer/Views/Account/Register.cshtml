@using IdentityServer.Quickstart.Account
@model IdentityServer.Quickstart.Account.RegisterInputModel

<div class="login-container container">
    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <form asp-route="Register">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input class="form-control" placeholder="Name" asp-for="Name" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="RepeatPassword"></label>
                            <input type="password" class="form-control" placeholder="Repeat password" asp-for="RepeatPassword" autocomplete="off">
                        </div>
                    
                        <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                        <button class="btn btn-primary" name="button" value="register">Register</button>
                    </form>
                    @if (Model.EmailSent == MailState.Sent)
                    {
                        <div class="pt-3 pb-3 mt-3 alert alert-success text-center" role="alert">
                            Email with registration link sent!
                        </div>
                    }
                    
                    @if (Model.EmailSent == MailState.Error)
                    {
                        <div class="pt-3 pb-3 mt-3 alert alert-warning text-center" role="alert">
                            There was an error sending your registration link, try again later or contact support
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>