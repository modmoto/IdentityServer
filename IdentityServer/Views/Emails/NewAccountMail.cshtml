@model IdentityServer.Quickstart.Mail.NewAccountMail

@{
  Layout = "_EmailLayout";
}

<div>
  Hi @Model.Name,
</div>
<br/>
<div>
  welcome to the fading flame league! To complete your registration, click the link below:
</div>
<br/>
<a style="color: #fff;
           background-color: #1b6ec2;
           border: 1px solid #1861ac;
           width: 10rem;
           margin: 2rem 10rem;
           line-height: 1.5;
           text-decoration: none;
           vertical-align: middle;
           cursor: pointer;
           font-size: 1rem;
           border-radius: 0.25rem;
           padding: 0.375rem 0.75rem;"
   href="@Model.VerifyLink">
  Verify email
</a>
<br>
<br>
<div>
  see you on the battlefield =)
</div>